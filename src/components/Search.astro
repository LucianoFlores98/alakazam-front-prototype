---
import { Input } from "@nextui-org/input";
import { Button } from "@nextui-org/react";
import { Icon } from "astro-icon/components";
---

<div class="flex rounded-full shadow-md md:flex-nowrap h-11">
    <Input variant="underlined" radius="lg" label="Buscá tu departamento soñado" className="rounded-lg pl-6 pr-1 pb-1 w-96" client:visible/>
    <Button radius="full" className="rounded-full bg-gradient-to-tr from-pink-500 to-yellow-500 text-white shadow-lg h-full" client:visible>
        <Icon name="search_40dp" class="text-4xl"/>
    </Button>
</div>
