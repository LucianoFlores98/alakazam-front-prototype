---
import { Badge, Divider } from "@nextui-org/react";
import Search from "./Search.astro";
import Notification from "./react/Notifications";
import { Icon } from "astro-icon/components";
---

<!-- component -->
<nav
  class="w-full flex flex-wrap sticky top-0 z-20 justify-between items-center mx-auto h-20 text-neutral-800 px-8 bg-slate-50 "
>

    <!-- logo -->
    <div class="inline-flex w-52 h-10">
      <a class="flex" href="/">
        <div class="w-1/2 p-0">
          <img
            src="/img/alakazam_logo.png"
            alt=""
            class="h-full w-full"
          />
        </div>
        <div class="leading-3">
          <h1 class="font-bold text-xl" style="font-family: 'Open sans'; color:#FF6868">Alakazam</h1>
          <h2 class="text-sm w-full text-nowrap text-gray-700/80 font-normal">
            Alquileres e inmuebles
          </h2>
        </div>
      </a>
    </div>
  <!-- end logo -->

  <!-- search bar -->
  <Search />
  <!-- end search bar -->

  <!-- login -->
  <div>
    <div class="flex items-center relative h-8">
      <div class="flex mr-3 items-center">
        <a
          class="inline-block py-2 px-2 hover:bg-gray-200 rounded-full"
          href="#"
        >
          <div
            class="flex items-center relative cursor-pointer whitespace-nowrap text-black"
          >
            Public√° tu inmueble
          </div>
        </a>
        
      </div>

      <Divider orientation="vertical" />

      <Badge color="danger" content={5} shape="circle">
        <Icon name="notifications_40dp" class="text-2xl mr-2 ml-3"/>
      </Badge>

      <div class="block ml-3">
        <div class="inline relative">
          <button
            type="button"
            class="inline-flex items-center relative px-1 border rounded-full hover:shadow-lg"
          >
            <div class="pl-1">
              <svg
                viewBox="0 0 32 32"
                xmlns="http://www.w3.org/2000/svg"
                aria-hidden="true"
                role="presentation"
                focusable="false"
                style="display: block; fill: none; height: 16px; width: 16px; stroke: currentcolor; stroke-width: 3; overflow: visible;"
              >
                <g fill="none" fill-rule="nonzero">
                  <path d="m2 16h28"></path>
                  <path d="m2 24h28"></path>
                  <path d="m2 8h28"></path>
                </g>
              </svg>
            </div>

            <div class="block flex-grow-0 flex-shrink-0 h-10 w-12 pl-4 py-1">
              <div class="rounded-full h-full w-full">
                <img
                  src="/img/profile.png"
                  alt="Mariano"
                  class="rounded-full h-full w-full"
                />
              </div>
            </div>
          </button>
        </div>
      </div>
    </div>
  </div>
  <!-- end login -->
</nav>

