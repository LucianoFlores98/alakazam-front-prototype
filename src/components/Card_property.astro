---
import { Icon } from "astro-icon/components"
import FavButton from "./Fav_button.astro"
import { Divider } from "@nextui-org/divider"
---    
    
    <div class="relative mx-2 w-80 min-w-80 mt-4">
      <a href="#" class="relative inline-block w-full">
        <div class="shadow-lg p-1 rounded-lg bg-white">
          <div class="flex justify-center relative rounded-lg overflow-hidden h-52">
            <div class="transition-transform duration-700 transform ease-in-out hover:scale-105 w-full">
              <div class="absolute inset-0 bg-[url('/img/departamento.jpg')] bg-cover"></div>
            </div>
  
            <div class="absolute flex justify-center bottom-0 mb-3">
              <div class="flex bg-white px-4 py-1 space-x-5 rounded-lg overflow-hidden shadow">
                <p class="flex items-center font-medium text-gray-800">
                  <Icon name="bed_24dp" class="text-2xl mr-1" />
                  3 + 1
                </p>
  
                <p class="flex items-center font-medium text-gray-800">
                  <Icon name="garage_24dp" class="text-2xl mr-1" />
                  2
                </p>
  
                <p class="flex items-center font-medium text-gray-800">
                  <Icon name="bathtub_24dp" class="text-2xl mr-1"/>
                  3
                </p>
              </div>
            </div>
  
            <span class="absolute top-0 left-0 inline-flex mt-3 ml-3 px-3 py-2 rounded-lg z-10 bg-success text-sm font-medium text-white select-none">
                Recomendado
            </span>
            <span class="absolute top-0 right-0 inline-flex mt-1 ml-1 px-3 py-2 rounded-lg z-10 text-sm font-medium text-white select-none">
                <FavButton>
              </span>
          </div>
  
          <div class="px-2 pb-2">
            <div class="mt-2">
              <h2 class="font-medium text-base md:text-xl text-gray-800 line-clamp-1" title="New York">
                Casa en Villa Sarita
              </h2>
              <div class="flex items-center">
                <Icon name="pin_drop_24dp" class="w-5 h-6"/>
                <p title="New York, NY 10004, United States" class="text-md text-gray-800 line-clamp-1">
                  Felix Aguirre 1519, Posadas.
                </p>
              </div>
            </div>
    
            <div class="grid grid-cols-2 grid-rows-2 gap-1 mt-5">
              <div class="flex flex-nowrap items-center">
                <Icon name="home_24dp" class="w-7 h-7 mr-1"/>
                <p class="line-clamp-1 text-sm">
                  Casa
                </p>
              </div>
              <div class="flex flex-nowrap items-center">
                <Icon name="contract_dp40" class="w-7 h-7 mr-1"/>
                <p class="line-clamp-1 text-sm">
                  Contrato anual
                </p>
              </div>
              <div class="flex flex-nowrap items-center">
                <Icon name="pets_24dp" class="w-6 h-6 mr-1"/>
                <p class="line-clamp-1 text-sm">
                  Mascotas
                </p>
              </div>
              <div class="flex flex-nowrap items-center">
                <Icon name="request_page_24dp" class="w-7 h-7 mr-1"/>
                <p class="line-clamp-1 text-sm">
                  Requisitos Altos
                </p>
              </div>

            </div>


            <div class="grid grid-cols-2 mt-5">
              <div class="flex items-center">
                <div class="relative">
                  <div class="rounded-full w-6 h-6 md:w-8 md:h-8 bg-[url('/img/inmobiliaria.jpg')] bg-cover"></div>
                  <span class="absolute top-0 right-0 inline-block w-3 h-3 bg-primary-red rounded-full"></span>
                </div>

                <p class="ml-2 text-gray-800 line-clamp-1">
                  Gaia Inmobiliaria
                </p>
              </div>

              <div class="flex justify-end">
                <p class="inline-block font-semibold text-primary_2 whitespace-nowrap leading-tight rounded-xl">
                  <span class="text-sm uppercase">
                    $
                  </span>
                  <span class="text-lg text-primary_2">360.000</span>/m
                </p>
              </div>
            </div>
          </div>
        </div>
      </a>
    </div>